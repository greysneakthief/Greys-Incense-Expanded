<Defs>
	<ThingDef ParentName="PlantBase">
		<defName>GI_Patchouli</defName>
		<label>patchouli shrub</label>
		<description>This tropical perennial has a distinct scent often associated with hippies. Historically, the essential oil of Patchouli has been extensively used in perfumery blending.</description>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Nutrition>0.2</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plants/Crops/GI_Patchouli</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>20</pathCost>
		<ingestible />
		<plant>
			<fertilityMin>1</fertilityMin>
			<fertilitySensitivity>1.2</fertilitySensitivity>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestTag>Standard</harvestTag>
			<maxMeshCount>1</maxMeshCount>
			<harvestedThingDef>GI_Patchouli_Leaves</harvestedThingDef>
			<harvestAfterGrowth>0.30</harvestAfterGrowth>
			<harvestYield>25</harvestYield>
			<harvestWork>200</harvestWork>
			<sowMinSkill>5</sowMinSkill>
            <drugForHarvestPurposes>True</drugForHarvestPurposes>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<topWindExposure>0.1</topWindExposure>
            <mustBeWildToSow>true</mustBeWildToSow>
			<growDays>13.3</growDays>			
			<visualSizeRange>0.3~1</visualSizeRange>
			<immatureGraphicPath>Things/Plants/Crops/GI_Patchouli_Immature</immatureGraphicPath>
			<wildOrder>2</wildOrder>
			<purpose>Misc</purpose>
			<humanFoodPlant>false</humanFoodPlant>
		</plant>
	</ThingDef>

